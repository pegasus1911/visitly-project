<!DOCTYPE html>
<html>
<head>
      <link rel="stylesheet" href="/stylesheet/style.css">
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>Edit Visit</title>
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top shadow">
  <div class="container-fluid">
    <a class="navbar-brand d-flex align-items-center gap-2" href="/cities/search-page">
      <img src="/images/logo.jpg" alt="Visitly Logo" width="30" height="30" class="rounded-circle">
      Visitly
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <a class="nav-link" href="/cities/search-page">Home</a>
        </li>
        <li class="nav-item">
          <form action="/logout" method="POST" class="d-inline">
            <button class="btn btn-link nav-link" type="submit">Logout</button>
          </form>
        </li>
      </ul>
    </div>
  </div>
</nav>


  <h1>Edit Visit for <%= visit.city.name %></h1>
  <form action="/visits/<%= visit._id %>?_method=PUT" method="POST">
    <label>Description:</label><br>
    <textarea name="description"><%= visit.description %></textarea><br><br>

    <label>Rating (1-5):</label><br>
    <input type="number" name="rating" min="1" max="5" value="<%= visit.rating %>"><br><br>

    <label>Visit Type:</label><br>
    <select name="visitType">
      <option value="Tourism" <%= visit.visitType === 'Tourism' ? 'selected' : '' %>>Tourism</option>
      <option value="Work" <%= visit.visitType === 'Work' ? 'selected' : '' %>>Work</option>
      <option value="Family" <%= visit.visitType === 'Family' ? 'selected' : '' %>>Family</option>
    </select><br><br>

    <label>Date In:</label><br>
    <input type="date" name="dateIn" value="<%= visit.dateIn.toISOString().split('T')[0] %>"><br><br>

    <label>Date Out:</label><br>
    <input type="date" name="dateOut" value="<%= visit.dateOut.toISOString().split('T')[0] %>"><br><br>

    <button type="submit">Update Visit</button>
  </form>
</body>
</html>
