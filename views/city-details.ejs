<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= city.name %> - Visits</title>
</head>
<body>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/cities/search-page">Visitly</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <a class="nav-link" href="/cities/search-page">Home</a>
        </li>
        <li class="nav-item">
          <form action="/logout" method="POST" class="d-inline">
            <button class="btn btn-link nav-link" type="submit">Logout</button>
          </form>
        </li>
      </ul>
    </div>
  </div>
</nav>

  <h1><%= city.name %> - Visits</h1>
  <a href="/cities/<%= city._id %>/add-visit">Add another visit</a>

  <ul>
    <% visits.forEach(visit => { %>
      <li>
        <strong>Author:</strong> <%= visit.user.username%><br>
        <strong>Rating:</strong> <%= visit.rating %><br>
        <strong>Visit Type:</strong> <%= visit.visitType %><br>
        <strong>Description:</strong> <%= visit.description %><br>
        <strong>Date in:  </strong><%= visit.dateIn.toDateString()%><br>
        <strong>Date out: </strong><%= visit.dateOut.toDateString()%><br>
        <% if (visit.user._id.toString() === session.userId) { %>
  <form action="/visits/<%= visit._id %>?_method=DELETE" method="POST">
    <button type="submit">Delete Visit</button>
  </form>
  <button><a href="/visits/<%= visit._id %>/edit">Edit Visit</a></button>
<% } %>

      </li>
    <% }) %>
  </ul>
  <form action="/logout" method="POST">
    <button type="submit">Log Out</button>
  </form>
</body>
</html>